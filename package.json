{
  "name": "micro-test-framework",
  "version": "0.1.0",
  "description": "micro test framework",
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prepublish": "npm test && npm run build",
    "build": "babel src --out-dir lib --source-maps-inline",
    "watch": "babel src --out-dir lib --watch --source-maps-inline",
    "lint": "eslint -c=package.json",
    "test": "ava && npm run lint ./src",
    "start": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khirayama/micro-test-framework.git"
  },
  "keywords": [
    "test",
    "runner",
    "framework",
    "assertion",
    "assert"
  ],
  "author": "khirayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khirayama/micro-test-framework/issues"
  },
  "homepage": "https://github.com/khirayama/micro-test-framework#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-preset-es2015": "^6.16.0",
    "browserify": "^13.1.0",
    "eslint": "^3.8.1",
    "eslint-config-xo-space": "^0.15.0",
    "sinon": "^1.17.6"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-core/register"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo-space/esnext"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
}
